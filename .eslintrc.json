{
    "env": {
        "es2021": true,
        "node": true,
        "jest": true
    },
    "extends": [
        "standard",
        "plugin:@typescript-eslint/recommended",
        "prettier/@typescript-eslint",
        "plugin:prettier/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint",
        "prettier"
    ],
    "rules": {
        "prettier/prettier":[
            "error",
            {
                "singleQuote": true,
                "semi": true,
                "trailingComma": "all",
                "arrowParens": "avoid"
            }
          ],
        "camelcase": "off",
        "@typescript-eslint/no-unused-vars":["error", {
            "argsIgnorePattern": "_"
        }],
        "@typescript-eslint/naming-convention": [
            "error",
            {
              "selector": "interface",
              "format": ["PascalCase"],
              "custom": {
                "regex": "^I[A-Z]",
                "match": true
              }
            }
        ],
        "no-useless-constructor": "off"
    }
}
